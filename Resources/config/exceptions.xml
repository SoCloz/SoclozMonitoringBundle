<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="socloz_monitoring.listener.class">Socloz\MonitoringBundle\Listener\Exceptions</parameter>
    </parameters>

    <services>
        <service id="socloz_monitoring.listener" class="%socloz_monitoring.listener.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException"/>
            <argument type="service" id="socloz_monitoring.mailer" on-invalid="null" />
            <argument type="service" id="socloz_monitoring.statsd" on-invalid="null" />
            <argument>%socloz_monitoring.exceptions.ignore%</argument>
        </service>
    </services>
</container>
